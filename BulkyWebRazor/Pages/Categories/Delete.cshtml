@page
@model BulkyWebRazor.Pages.Categories.DeleteModel

<form method="post">
    <input type="hidden" asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 cite="text-primary">Delete Category</h2>
            <br />
        </div>

        @* <div asp-validation-summary="All"></div> *@

        <div class="mb-3 row">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" class="form-control" disabled />
        </div>

        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit"
                        class="btn btn-danger form-control">
                    Delete
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-secondary border form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>